<!-- Form Handling -->
<form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Employee ID</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="ids" required placeholder="Eg: 101">
        </div>
        <div class="form-group">
            <label for="email" class="text-light">Name</label>
            <input type="text" name="name" required placeholder="Name here...">
        </div>
        <div class="form-group">
            <label for="position" class="text-light">Position</label>
            <input type="text" name="position" required placeholder="Eg: Developer">
        </div>
        <div class="form-group">
            <label for="salary" class="text-light">Salary</label>
            <input type="text" name="salary" required placeholder="Eg: 50000">
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>
    </div>
</form>